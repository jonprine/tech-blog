<article class="post">
  <div class="title">
    <a href="/post/{{id}}">{{title}}</a>
    <span><strong>by {{user.username}}
        on {{format_date created_at}}
      </strong> </span>
  </div>
  <div class="body posts">
    {{post_text}}
      
  </div>
  <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
</article>