{{#if posts.length}}
<section>
  <div>
    <h2>Your Dashboard</h2>
  </div>
  <ol>
    {{#each posts as |post|}}
    <ul>
      <article class="post">
        <div class="title">
          <a href="/post/{{id}}">{{title}}</a><span><strong>Posted by {{user.username}} on
              {{format_date created_at}}</strong></span>
        </div>
      </article>
      <div>
        <button type="submit"><a href="/dashboard/edit/{{post.id}}" class="btn">Edit post</a>
          <button type="submit"><a href="/dashboard/newpost" class="btn">Create New Post</button>
      </div>
    </ul>
    {{/each}}
  </ol>
</section>

{{/if}}